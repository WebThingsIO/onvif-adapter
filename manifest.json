{
  "author": "Mozilla IoT",
  "description": "ONVIF Profile S camera adapter.",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/mozilla-iot/onvif-adapter#readme",
  "id": "onvif-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "ONVIF",
  "options": {
    "default": {
      "devices": [],
      "enablePTZ": false
    },
    "schema": {
      "type": "object",
      "required": [
        "enablePTZ",
        "devices"
      ],
      "properties": {
        "enablePTZ": {
          "type": "boolean",
          "description": "Enable experimental PTZ controls"
        },
        "devices": {
          "description": "List of known devices",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "address",
              "username",
              "password"
            ],
            "properties": {
              "address": {
                "description": "Address of ONVIF endpoint, e.g. http://192.168.1.100:888/onvif/device_service",
                "type": "string"
              },
              "username": {
                "description": "Username to log in with",
                "type": "string"
              },
              "password": {
                "description": "Password to log in with",
                "type": "string"
              },
              "urn": {
                "description": "Unique URN of device.",
                "type": "string",
                "readOnly": true
              },
              "note": {
                "description": "Auto-generated notes.",
                "type": "string",
                "readOnly": true
              }
            }
          }
        }
      }
    }
  },
  "short_name": "ONVIF",
  "version": "0.3.2"
}
